<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <h2>Login Page</h2><span class="splash-description">Please enter your user information.</span>
            </div>
            <div class="card-body">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="email" type="text" placeholder="email"
                            autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="password" type="password"
                            placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>
                </form>
            </div>
        </div>
    </div>
</body>