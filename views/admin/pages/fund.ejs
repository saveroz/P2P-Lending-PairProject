<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/d00c61de42.js"></script>
  <!-- <link rel="stylesheet" href="./user.css"> -->
  <title>User</title>
</head>
<body>

    <div class="jumbotron jumbotron-fluid" style="background-image: url('/header.jpg'); background-size: cover; background-size: 100% 100%" >
        <div class="container" >
         <h1 text-align="center">Danain Aja</h1>
        </div>
      </div>

  <section id="history-order">
    <div class="container">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap">Add</button>
        <br><br>
        <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Status</th>
            <th scope="col">Bunga</th>
            <th scope="col">Waktu</th>
            <th scope="col">Nilai</th>
            <th scope="col">Nama</th>
            <th scope="col">Progress</th>
            <th scope="col">Sisa Nilai/Hari</th>
            <th scope="col">Options</th>
          </tr>
        </thead>
        <tbody>
            <% let no=1%>
            <% borrowers.forEach((borrower) => { %>
              <tr>
                <td scope="col"><%= no %></td>
                <td scope="col"><%= borrower.status%></td>
                <td scope="col"><%= borrower.bunga %></td>
                <td scope="col"><%= borrower.deadline %></td>
                <td scope="col">Rp. <%= borrower.BorrowedMoney%></td>
                <td scope="col"><a href="/login/admin/listPeminjam/<%= borrower.id%>"><%= borrower.name%></a></td>
                <td scope="col">
                    <h4><%=borrower.dataValues.progressBar%></h4>
                </td>
                <td scope="col">Rp. <%= borrower.dataValues.sisaNilai%>/<%= borrower.dataValues.sisahari%> days</td>
                <td scope="col"><a href="/login/admin/edit/<%= borrower.id%>" >Edit</a>      <a href="/login/admin/delete/<%= borrower.id%>" >Delete</a></td>
              </tr>
            <% no+=1 }) %>
        </tbody>
      </table> 
      <img src="./OJK.png" alt="OJK" width=180 height=120>
    </div>
  </section>
</body>
</html>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Borrower</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/login/admin/registerCampaign" method="POST">
        <div class="modal-body">
            <div class="form-group">
                <label class="col-form-label">Nama</label>
                <input id="inputText3" type="text" class="form-control" name="name">
            </div>
            <div class="form-group">
                <label for="inputNumber4" class="col-form-label">Jumlah Pinjaman</label>
                <input id="inputNumber4" type="number" class="form-control" name="borrowedMoney">
            </div>
            <div class="form-group">
                <label for="inputNumber4" class="col-form-label">Lama Meminjam(dalam bulan)</label>
                <input id="inputNumber4" type="number" class="form-control" name="deadline">
            </div>
            <div class="form-group">
                <label for="inputNumber4" class="col-form-label">Bunga</label>
                <input id="inputNumber4" type="number" class="form-control" name="bunga">
            </div>
            <div class="form-group">
                <label for="inputNumber4" class="col-form-label">Batas pengumpulan</label>
                <input id="inputNumber4" type="date" class="form-control" name="target">
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>